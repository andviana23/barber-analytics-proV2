{
  "dashboard": {
    "title": "Barber Analytics - Overview",
    "tags": ["barber-analytics", "overview"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Uptime (24h)",
        "type": "stat",
        "targets": [
          {
            "expr": "avg(up{job=\"barber-backend\"}) * 100",
            "legendFormat": "Uptime %",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 0
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 99, "color": "yellow" },
                { "value": 99.5, "color": "green" }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Total Requests (24h)",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(increase(http_requests_total{job=\"barber-backend\"}[24h]))",
            "legendFormat": "Total Requests",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 0
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "blue" }
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Error Rate (5m)",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=\"barber-backend\",status=~\"5..\"}[5m])) / sum(rate(http_requests_total{job=\"barber-backend\"}[5m])) * 100",
            "legendFormat": "Error Rate %",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 12,
          "y": 0
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 0.5, "color": "yellow" },
                { "value": 1, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Active Tenants",
        "type": "stat",
        "targets": [
          {
            "expr": "barber_tenants_total",
            "legendFormat": "Total Tenants",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 18,
          "y": 0
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "blue" }
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Requests per Second",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=\"barber-backend\"}[5m]))",
            "legendFormat": "req/s",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 4
        },
        "yaxes": [
          {
            "format": "reqps",
            "label": "Requests/sec"
          }
        ]
      },
      {
        "id": 6,
        "title": "Error Rate Over Time",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=\"barber-backend\",status=~\"4..\"}[5m])) by (status)",
            "legendFormat": "4xx - {{status}}",
            "refId": "A"
          },
          {
            "expr": "sum(rate(http_requests_total{job=\"barber-backend\",status=~\"5..\"}[5m])) by (status)",
            "legendFormat": "5xx - {{status}}",
            "refId": "B"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 4
        },
        "yaxes": [
          {
            "format": "reqps",
            "label": "Errors/sec"
          }
        ],
        "seriesOverrides": [
          {
            "alias": "/5xx.*/",
            "color": "red"
          },
          {
            "alias": "/4xx.*/",
            "color": "yellow"
          }
        ]
      },
      {
        "id": 7,
        "title": "Top 10 Endpoints by Request Count",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, sum(rate(http_requests_total{job=\"barber-backend\"}[5m])) by (endpoint))",
            "legendFormat": "{{endpoint}}",
            "refId": "A",
            "format": "table",
            "instant": true
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 12
        }
      }
    ],
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h"]
    }
  }
}
